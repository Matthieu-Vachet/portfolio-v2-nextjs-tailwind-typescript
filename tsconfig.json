{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./*"]
        }
    },
    // "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "include": [
        ".next/types/**/*.ts",
        "app/work-section/projectDetails.ts",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "main/types/**/*.ts",
        "dev/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
